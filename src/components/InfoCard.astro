---
interface Props {
  title: string;
  items: string[];
  bgColor: 'primary' | 'secondary';
}

const { title, items, bgColor } = Astro.props;
const textColor = bgColor === 'primary' ? 'primaryHighlightText' : 'secondaryHighlightText';
---

<div class="p-6 rounded-lg" style={`background: var(--${bgColor});`}>
  <h3 class="text-2xl font-bold mb-4" style={`color: var(--${textColor})`}>
    {title}
  </h3>
  <ul class="space-y-2" style={`color: var(--${textColor})`}>
    {items.map((item) => <li>{item}</li>)}
  </ul>
</div> 