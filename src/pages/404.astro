---
import MainLayout from '../layouts/MainLayout.astro';

const errorMessages = [
  "Looks like this page has been banned! (Just kidding, it's just missing)",
  "This page hasn't been blocked - it just doesn't exist!",
  "No social media ban here, just a missing page",
  "404: Page Not Found (but at least it wasn't banned)",
];

const randomMessage = errorMessages[Math.floor(Math.random() * errorMessages.length)];
---

<MainLayout title="404 - Page Not Found">
  <div class="container mx-auto px-4">
    <div class="min-h-[80vh] flex flex-col items-center justify-center text-center">
      <!-- Wrapper for content with max width -->
      <div class="max-w-2xl w-full space-y-8">
        <!-- Large 404 with text shadow -->
        <h1 
          class="text-8xl md:text-9xl font-bold tracking-wider"
          style="color: var(--primary); text-shadow: 4px 4px 0px var(--secondary);"
        >
          404
        </h1>

        <!-- Error Message -->
        <p 
          class="text-xl md:text-3xl font-semibold leading-relaxed px-4"
          style="color: var(--secondary)"
        >
          {randomMessage}
        </p>

        <!-- Explanation -->
        <p 
          class="text-lg max-w-md mx-auto px-4"
          style="color: var(--text)"
        >
          The page you're looking for seems to have disappeared into the digital void.
          Unlike social media, we can't blame this on any bans!
        </p>

        <!-- Much Bigger Home Button -->
        <div class="pt-8">
          <a 
            href="/" 
            class="inline-block px-16 py-6 text-2xl md:text-3xl font-bold rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
            style="background: var(--primary); color: var(--primaryHighlightText)"
          >
            Back to Home
          </a>
        </div>

        <!-- ASCII Art with better spacing -->
        <div 
          class="pt-12 font-mono text-2xl md:text-3xl select-none"
          style="color: var(--accent)"
        >
          ¯\_(ツ)_/¯
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Optional: Add fade-in animation */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .container > div {
    animation: fadeIn 0.5s ease-out;
  }

  /* Ensure consistent spacing */
  .space-y-8 > * {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  /* Optional: Add hover effect to ASCII art */
  .font-mono {
    transition: transform 0.3s ease;
  }

  .font-mono:hover {
    transform: scale(1.1);
  }
</style> 